{
    "name": "flight-cost-optimizer",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@radix-ui/react-icons": "^1.3.0",
        "@radix-ui/react-slot": "^1.0.2",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.5",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "tailwind-merge": "^2.2.0",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.3.3",
        "web-vitals": "^2.1.4"
    },
    "devDependencies": {
        "@craco/craco": "^7.1.0",
        "@playwright/test": "^1.43.1",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "jest": "^27.5.1",
        "prettier": "3.2.5",
        "tailwindcss": "^3.4.0"
    },
    "overrides": {
        "typescript": "^5.3.3"
    },
    "scripts": {
        "start": "craco start",
        "build": "craco build",
        "lint": "eslint . --ext ts,.tsx",
        "test": "craco test",
        "eject": "craco eject",
        "e2e-tests": "npx playwright test"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
      "rules": {
        "@typescript-eslint/naming-convention": [
          "error",
          {
            "selector": "memberLike",
            "format": ["camelCase"],
            "leadingUnderscore": "forbid"
          },
          {
            "selector": "memberLike",
            "modifiers": ["private"],
            "format": ["camelCase"],
            "leadingUnderscore": "require"
          }
        ]
      }
    },
    "jest": {
        "moduleNameMapper": {
            "^@/(.+)": "<rootDir>/src/$1"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
